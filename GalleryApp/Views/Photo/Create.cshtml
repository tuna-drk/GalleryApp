@model GalleryApp.Models.Photo

@{
    ViewData["Title"] = "Yeni Fotoğraf Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-plus-circle"></i> Yeni Fotoğraf Ekle
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-image text-primary"></i> Fotoğraf Başlığı *
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Fotoğraf başlığını girin" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">
                                <i class="fas fa-tags text-primary"></i> Kategori *
                            </label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">Kategori Seçin</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">
                                <i class="fas fa-link text-primary"></i> Resim URL'si *
                            </label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/resim.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-info-circle text-primary"></i> Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Fotoğraf hakkında açıklama..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}