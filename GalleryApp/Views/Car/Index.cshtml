@model IEnumerable<GalleryApp.Models.Car>

@{
    ViewData["Title"] = "Araba Galerisi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-car"></i> Araba Galerisi
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Yeni Araba Ekle
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var car in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm car-card">
                                <div class="position-relative">
                                    <img src="@car.ImageUrl" class="card-img-top car-image" alt="@car.Name" 
                                         onerror="this.src='https://via.placeholder.com/400x250/6c757d/ffffff?text=Araba+Resmi+Yok'">
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-primary">@car.Year</span>
                                    </div>
                                    @if (car.Category != null)
                                    {
                                        <div class="position-absolute bottom-0 start-0 m-2">
                                            <span class="badge bg-success">@car.Category.Name</span>
                                        </div>
                                    }
                                </div>
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-primary">@car.Name</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-industry"></i> @car.Brand @car.Model
                                    </h6>
                                    
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-cogs"></i> @car.EngineType
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-horse"></i> @car.Horsepower
                                            </small>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(car.Description))
                                    {
                                        <p class="card-text flex-grow-1">@car.Description</p>
                                    }

                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> @car.AddedDate.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@car.Id" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Detay
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@car.Id" 
                                           class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@car.Id" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-car-side fa-5x text-muted mb-4"></i>
                    <h3 class="text-muted">Henüz hiç araba eklenmemiş</h3>
                    <p class="text-muted">İlk arabayı eklemek için yukarıdaki butona tıklayın.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i> İlk Arabayı Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .car-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
    }

    .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .car-image {
        height: 250px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
    }

    .card-footer {
        border-top: 1px solid rgba(0,0,0,0.1);
        border-radius: 0 0 15px 15px !important;
    }

    .btn-group .btn {
        border-radius: 0;
    }

    .btn-group .btn:first-child {
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    .btn-group .btn:last-child {
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }
</style>
