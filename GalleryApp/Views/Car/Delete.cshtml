@model GalleryApp.Models.Car

@{
    ViewData["Title"] = "Araba Sil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat!
                </h4>
                <p>Bu arabayı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                <hr>
                <p class="mb-0">Silinen araba tüm bilgileriyle birlikte kalıcı olarak kaldırılacaktır.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-trash"></i> Araba Sil
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name"
                                 onerror="this.src='https://via.placeholder.com/400x250/6c757d/ffffff?text=Araba+Resmi+Yok'">
                        </div>
                        <div class="col-md-6">
                            <h3 class="text-danger">@Model.Name</h3>
                            
                            <div class="mb-3">
                                <strong><i class="fas fa-industry text-primary"></i> Marka:</strong>
                                <span class="ms-2">@Model.Brand</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-car-side text-primary"></i> Model:</strong>
                                <span class="ms-2">@Model.Model</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-calendar text-primary"></i> Yıl:</strong>
                                <span class="ms-2">@Model.Year</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-cogs text-primary"></i> Motor Tipi:</strong>
                                <span class="ms-2">@Model.EngineType</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-horse text-primary"></i> Motor Gücü:</strong>
                                <span class="ms-2">@Model.Horsepower</span>
                            </div>

                            @if (Model.Category != null)
                            {
                                <div class="mb-3">
                                    <strong><i class="fas fa-tags text-primary"></i> Kategori:</strong>
                                    <span class="badge bg-success ms-2">@Model.Category.Name</span>
                                </div>
                            }

                            <div class="mb-3">
                                <strong><i class="fas fa-clock text-primary"></i> Eklenme Tarihi:</strong>
                                <span class="ms-2">@Model.AddedDate.ToString("dd MMMM yyyy, HH:mm")</span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-3">
                                    <strong><i class="fas fa-info-circle text-primary"></i> Açıklama:</strong>
                                    <p class="mt-2 text-muted">@Model.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-transparent">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Evet, Sil
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> Detay
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .card-footer {
        border-radius: 0 0 15px 15px !important;
    }

    .btn {
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 500;
    }

    .alert {
        border-radius: 15px;
        border: none;
    }
</style>
