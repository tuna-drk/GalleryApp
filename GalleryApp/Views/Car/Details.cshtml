@model GalleryApp.Models.Car

@{
    ViewData["Title"] = "Araba Detayı - " + Model.Name;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Car" asp-action="Index">Araba Galerisi</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <img src="@Model.ImageUrl" class="card-img-top car-detail-image" alt="@Model.Name"
                     onerror="this.src='https://via.placeholder.com/600x400/6c757d/ffffff?text=Araba+Resmi+Yok'">
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-car"></i> @Model.Name
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-industry text-primary"></i> Marka:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.Brand
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-car-side text-primary"></i> Model:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.Model
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-calendar text-primary"></i> Yıl:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.Year
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-cogs text-primary"></i> Motor Tipi:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.EngineType
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-horse text-primary"></i> Motor Gücü:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.Horsepower
                        </div>
                    </div>

                    @if (Model.Category != null)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong><i class="fas fa-tags text-primary"></i> Kategori:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="badge bg-success fs-6">@Model.Category.Name</span>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong><i class="fas fa-clock text-primary"></i> Eklenme Tarihi:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.AddedDate.ToString("dd MMMM yyyy, HH:mm")
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr>
                        <h5><i class="fas fa-info-circle text-primary"></i> Açıklama</h5>
                        <p class="text-muted">@Model.Description</p>
                    }
                </div>

                <div class="card-footer bg-transparent">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .car-detail-image {
        height: 400px;
        object-fit: cover;
        border-radius: 15px;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .card-footer {
        border-radius: 0 0 15px 15px !important;
    }

    .breadcrumb {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
    }
</style>
