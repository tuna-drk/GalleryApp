@model IEnumerable<GalleryApp.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-tags"></i> Kategoriler
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Yeni Kategori Ekle
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var category in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm category-card">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-tag fa-3x text-primary mb-3"></i>
                                    <h4 class="card-title text-primary mb-3">@category.Name</h4>
                                    
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="text-center">
                                                <i class="fas fa-images fa-2x text-success mb-2"></i>
                                                <h5 class="text-success">@category.Photos.Count</h5>
                                                <small class="text-muted">Fotoğraf</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center">
                                                <i class="fas fa-car fa-2x text-warning mb-2"></i>
                                                <h5 class="text-warning">@category.Cars.Count</h5>
                                                <small class="text-muted">Araba</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            Toplam: @(category.Photos.Count + category.Cars.Count) öğe
                                        </small>
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@category.Id" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Detay
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@category.Id" 
                                           class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-tags fa-5x text-muted mb-4"></i>
                    <h3 class="text-muted">Henüz hiç kategori eklenmemiş</h3>
                    <p class="text-muted">İlk kategoriyi eklemek için yukarıdaki butona tıklayın.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i> İlk Kategoriyi Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .card-footer {
        border-top: 1px solid rgba(0,0,0,0.1);
        border-radius: 0 0 15px 15px !important;
    }
</style>